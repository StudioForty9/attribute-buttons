<config>
    <tabs>
        <studioforty9 translate="label" module="studioforty9_attributebuttons">
            <label>StudioForty9</label>
            <sort_order>10</sort_order>
        </studioforty9>
    </tabs>
    <sections>
        <studioforty9_attributebuttons translate="label" module="studioforty9_attributebuttons">
            <label>Attribute Buttons</label>
            <tab>studioforty9</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Module Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <attributes>
                            <label>Attributes</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>studioforty9_attributebuttons/system_config_source_attributes</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </attributes>
                    </fields>
                </settings>
            </groups>
        </studioforty9_attributebuttons>
    </sections>
</config>
